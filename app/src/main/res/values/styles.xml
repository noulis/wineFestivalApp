<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeYellow" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FBCA90</item>
        <item name="colorPrimaryDark">#D9AE7C</item>
        <item name="colorAccent">#FBCA90</item>
    </style>

    <style name="horizontalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorGray</item>
    </style>

</resources>
